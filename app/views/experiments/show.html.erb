
<div class=" viewport ">

<p id="notice"><%= notice %></p>

<p>
  <h2>
  <%= @experiment.title %>
  </h2>
  <%= link_to 'Edit', edit_experiment_path(@experiment) %> |
  <%= link_to 'Back', experiments_path %>
</p>

<p>
  <strong>Date started:</strong>
  <%= @experiment.date_started %>
</p>

<p>
  <strong>Scheme:</strong>
  <div class="textbox large">
	<%= image_tag(@experiment.image_url, class: 'list_image') %>
	</div>
</p>

<p>
  <strong>Procedure:</strong><br>
  <div class="textbox large">
	<%= strip_tags(@experiment.procedure) %>
	</div>
  	
</p>



</div>
